<Window x:Class="kurakin_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurakin_demo"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="300" MinWidth="400" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0.0"></GradientStop>
            <GradientStop Color="#4169E1" Offset="1.0"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" Foreground="AliceBlue" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10"></TextBlock>
            <TextBlock Text="Логин" Foreground="AliceBlue" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left"></TextBlock>
            <TextBox x:Name="Login" Height="20" Margin="0,5,0,10"></TextBox>
            <TextBlock Text="Пароль" Foreground="AliceBlue" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left"></TextBlock>
            <PasswordBox x:Name="Password" Height="20" Margin="0,5,0,10"></PasswordBox>
            <Button Content="Войти" Height="27" Width="120" FontWeight="Bold" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="2" Margin="0,12,0,0" Padding="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
