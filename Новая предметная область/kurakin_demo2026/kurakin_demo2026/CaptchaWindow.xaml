<Window x:Class="kurakin_demo2026.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurakin_demo2026"
        mc:Ignorable="d"
        Title="CaptchaWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0.0"></GradientStop>
            <GradientStop Color="#4169E1" Offset="1.0"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Область сборки (сетка 2x2) -->
        <UniformGrid Grid.Row="0" Rows="2" Columns="2" Margin="10" Name="PuzzleGrid"
                 HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="LightGray" BorderThickness="1" Width="80" Height="80" 
                Background="WhiteSmoke" Tag="1"/>
            <Border BorderBrush="LightGray" BorderThickness="1" Width="80" Height="80" 
                Background="WhiteSmoke" Tag="2"/>
            <Border BorderBrush="LightGray" BorderThickness="1" Width="80" Height="80" 
                Background="WhiteSmoke" Tag="3"/>
            <Border BorderBrush="LightGray" BorderThickness="1" Width="80" Height="80" 
                Background="WhiteSmoke" Tag="4"/>
        </UniformGrid>

        <!-- Область с кусочками -->
        <UniformGrid Grid.Row="1" Rows="2" Columns="2" Margin="10" Name="PiecesPanel"
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="LightGray" BorderThickness="2" Width="80" Height="80" Tag="1"/>
            <Border BorderBrush="LightGray" BorderThickness="2" Width="80" Height="80" Tag="2"/>
            <Border BorderBrush="LightGray" BorderThickness="2" Width="80" Height="80" Tag="3"/>
            <Border BorderBrush="LightGray" BorderThickness="2" Width="80" Height="80" Tag="4"/>
        </UniformGrid>
    </Grid>
</Window>
