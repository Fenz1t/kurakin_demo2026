<Window x:Class="kurakin_demo2026.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurakin_demo2026"
        mc:Ignorable="d"
        Title="Добавление нового пользователя"  MinHeight="450" MinWidth="800" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0.0"></GradientStop>
            <GradientStop Color="#4169E1" Offset="1.0"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Имя:" Foreground="White" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="FirstNameTextBox" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
        <Label Content="Фамилия:" Foreground="White" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="LastNameTextBox" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
        <Label Content="Имя пользователя:" Foreground="White" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="UsernameTextBox" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
        <Label Content="Роль:" Foreground="White" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="3" Margin="0,0,0,10" x:Name="RoleComboBox" Grid.Column="1">
            <ComboBoxItem Content="Admin"></ComboBoxItem>
            <ComboBoxItem Content="User"></ComboBoxItem>
        </ComboBox>
        <Label Content="Пароль:" Foreground="White" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PasswordBox" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
        <Border CornerRadius="12" Grid.Column="2" Grid.Row="7" Height="40" Width="160" BorderBrush="White" BorderThickness="2" Margin="0,12,20,0" Padding="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Button Content="Добавить пользователя" Grid.Column="2" Grid.Row="7" Height="33" Width="150" FontWeight="Bold" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="0" Margin="0,0,0,0" Padding="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"></Button>
        </Border>
    </Grid>
</Window>
